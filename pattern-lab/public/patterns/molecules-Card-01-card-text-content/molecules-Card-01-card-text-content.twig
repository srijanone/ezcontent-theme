<div class="card-text-content">
  {% include '@atoms/02-text/00-headings.twig' with {
    heading_level: 1,
    heading: card.title,
    class: 'field--name-field-title'
  } %}

  {% include '@atoms/02-text/00-headings.twig' with {
    heading_level: 4,
    heading: card.short_title,
    class: 'field--name-field-short-title'
  } %}

  {% include '@atoms/02-text/08-field.twig' with {
    field_content: card.sub_head,
    class: 'field--name-field-subhead'
  } %}

  {% include '@atoms/02-text/01-paragraph.twig' with {
    paragraph_content: card.description,
    class: 'field--name-field-summary'
  } %}

  <div class="field--name-field-link">
    {% include '@atoms/12-links/00-links.twig' with {
      text: card.link_text,
      url: card.link_url
    } %}
  </div>
</div>
