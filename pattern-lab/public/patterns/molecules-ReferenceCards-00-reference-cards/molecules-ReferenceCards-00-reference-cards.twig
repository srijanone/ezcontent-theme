{{ title_prefix }}
{% if label %}
  <h2{{title_attributes.addClass('block-title')}}>{{ label }}</h2>
{% endif %}
{{ title_suffix }}

{% block content %}
  <div class="text-left referenced-card" aria-label="reference cards">
    <div class="field--name-field-article">
      {% for key,value in referenceCard.data %}
        <div class="field__item" key={{loop.index}}>
          <div class="field--type-image">
            {% include "@atoms/04-images/01-image.twig" with {
              src: value.image,
              alt: value.alt
            } %}
          </div>

          {% include '@atoms/02-text/08-field.twig' with {
            field_content: value.date,
            class: "referenced-date"
          } %}

          <div class="block-field-blocknodearticletitle" key={{loop.index}}>
            {% include "@atoms/12-links/00-links.twig" with {
              url: value.path,
              text: value.title
            } %}
          </div>

          {% include "@atoms/02-text/01-paragraph.twig" with {
            paragraph_content: value.summary,
            class: 'referenced-summary'
          } %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
