<div class="content-listing-component">
  
  <div class="field--name-field-image">
    {% include '@atoms/04-images/01-image.twig' with {
      src: content_list.url
    } %}
  </div>

  <div class="field--text-wrapper">
    <div class="author-details">
      {% include '@atoms/02-text/08-field.twig' with {
        field_content: content_list.author,
        class: 'author'
      } %}
      |
      {% include '@atoms/02-text/08-field.twig' with {
        field_content: content_list.tag,
        class: 'tag'
      } %}
    </div>

    <div class="field--name-field-title">
      {% if content_list.label %}
        {% include '@atoms/02-text/00-headings.twig' with {
          heading_level: 2,
          heading: content_list.label
        } %}
      {% endif %}
    </div>

    <div class="field--name-field-summary">
      {% block content %}
        {% include '@atoms/02-text/01-paragraph.twig' with {
          paragraph_content: content_list.content,
          class: 'field--name-field-body'
        } %}
      {% endblock %}
    </div>
</div>
</div>
